<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_scanning"
        android:textSize="24sp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/state_of_charge_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone">
    <TextView
        android:id="@+id/state_of_charge"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="36sp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"/>
    <com.vikas.bledevicestate.BatteryView
        android:id="@+id/battery_view"
        android:layout_width="64dp"
        android:layout_height="10dp"
        android:src="@drawable/ic_charging"
        app:bv_charging="false"
        app:bv_percent="0" />
    </LinearLayout>
    <TextView
        android:id="@+id/state_of_charge_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/state_of_charge"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/state_of_charge_ll"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/distance_to_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/state_of_charge_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/distance_to_empty_icon"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="@drawable/riding"
        android:layout_marginStart="36dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/state_of_charge_title"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/distance_to_empty_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text="@string/distance_to_empty"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/distance_to_empty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>